# ============================================
# AK Ultimate Dental — Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control.

# --- Supabase (REQUIRED) ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- Clerk Auth (REQUIRED) ---
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# --- AI / Anthropic (REQUIRED for One Engine AI features) ---
ANTHROPIC_API_KEY=sk-ant-...

# --- Twilio SMS (REQUIRED for appointment reminders & SMS) ---
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# --- Resend Email (REQUIRED for email communications) ---
RESEND_API_KEY=re_...

# --- Cron Jobs (REQUIRED for Vercel Cron to work) ---
# Generate with: openssl rand -hex 32
CRON_SECRET=your-random-secret

# --- Stripe Payments (optional — treatment payments) ---
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# --- Vapi Voice AI (optional — voice assistant) ---
VAPI_API_KEY=

# --- SEO Integrations (optional) ---
GOOGLE_SITE_VERIFICATION=
BING_SITE_VERIFICATION=
GOOGLE_SEARCH_CONSOLE_SITE_URL=https://akultimatedental.com
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}
BING_WEBMASTER_API_KEY=
INDEXNOW_KEY=
SEO_ALERT_EMAIL=

# --- GitHub Integration (optional — SEO auto-fix creates issues) ---
GITHUB_TOKEN=ghp_...
GITHUB_REPO=owner/repo

# --- Deployment Webhook (optional) ---
DEPLOY_WEBHOOK_SECRET=

# --- Message Encryption (optional — SMS message encryption at rest) ---
# Generate with: openssl rand -hex 32
MESSAGE_ENCRYPTION_KEY=
